<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ma_json_app.tguillaume.com.majsonapp.MJASelectEquipActivity"
    android:background="@color/MJA_Gray_48">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/activity_equipment_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="@color/MJA_Yellow_gold"
                android:text="@string/activity_equipment_title"/>

            <TextView
                android:id="@+id/activity_equipment_select_weapon_textview"
                android:layout_below="@+id/activity_equipment_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:textAlignment="center"
                android:textStyle="normal"
                android:textSize="25sp"
                android:textColor="@color/MJA_White"
                android:text="@string/activity_equipment_weapon_textview"/>

            <LinearLayout
                android:id="@+id/activity_equipment_select_weapon_container_layout"
                android:layout_below="@+id/activity_equipment_select_weapon_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/activity_equipment_select_weapon1_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/shape_border_layout"
                    android:orientation="vertical"
                    android:layout_margin="5dp">

                    <LinearLayout
                        android:id="@+id/activity_equipment_select_weapon1_title_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_background_title_item_mission_layout"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/activity_equipment_weapon_1_name_textview"
                            android:layout_below="@+id/activity_equipment_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:textAlignment="center"
                            android:textStyle="normal"
                            android:textSize="18sp"
                            android:textColor="@color/MJA_Gray_48"
                            android:text="@string/activity_equipment_weapon_pp9_name_textview"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_walter_pp9"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:tint="@color/MJA_White"/>

                    <TextView
                        android:id="@+id/activity_equipment_weapon_1_equipment_textview"
                        android:layout_below="@+id/activity_equipment_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:textAlignment="center"
                        android:textStyle="normal"
                        android:textSize="16sp"
                        android:textColor="@color/MJA_White"
                        android:text="@string/activity_equipment_weapon_pp9_equipment_textview"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/activity_equipment_select_weapon2_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/shape_border_layout"
                    android:orientation="vertical"
                    android:layout_margin="5dp">

                    <LinearLayout
                        android:id="@+id/activity_equipment_select_weapon2_title_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_background_title_item_mission_layout"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/activity_equipment_weapon_2_name_textview"
                            android:layout_below="@+id/activity_equipment_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:textAlignment="center"
                            android:textStyle="normal"
                            android:textSize="18sp"
                            android:textColor="@color/MJA_Gray_48"
                            android:text="@string/activity_equipment_weapon_m4_name_textview"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_m4"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:tint="@color/MJA_White"/>

                    <TextView
                        android:id="@+id/activity_equipment_weapon_2_equipment_textview"
                        android:layout_below="@+id/activity_equipment_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:textAlignment="center"
                        android:textStyle="normal"
                        android:textSize="16sp"
                        android:textColor="@color/MJA_White"
                        android:text="@string/activity_equipment_weapon_m4_equipment_textview"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/activity_equipment_select_weapon3_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/shape_border_layout"
                    android:orientation="vertical"
                    android:layout_margin="5dp">

                    <LinearLayout
                        android:id="@+id/activity_equipment_select_weapon3_title_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_background_title_item_mission_layout"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/activity_equipment_weapon_3_name_textview"
                            android:layout_below="@+id/activity_equipment_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:textAlignment="center"
                            android:textStyle="normal"
                            android:textSize="18sp"
                            android:textColor="@color/MJA_Gray_48"
                            android:text="@string/activity_equipment_weapon_mp5_name_textview"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_mp5"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:tint="@color/MJA_White"/>

                    <TextView
                        android:id="@+id/activity_equipment_weapon_3_equipment_textview"
                        android:layout_below="@+id/activity_equipment_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:textAlignment="center"
                        android:textStyle="normal"
                        android:textSize="16sp"
                        android:text="@string/activity_equipment_weapon_mp5_equipment_textview"/>

                </LinearLayout>


            </LinearLayout>


            <TextView
                android:id="@+id/activity_equipment_select_car_textview"
                android:layout_below="@+id/activity_equipment_select_weapon_container_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:textAlignment="center"
                android:textStyle="normal"
                android:textSize="25sp"
                android:textColor="@color/MJA_White"
                android:text="@string/activity_equipment_car_textview"/>

            <LinearLayout
                android:id="@+id/activity_equipment_select_car_container_layout"
                android:layout_below="@+id/activity_equipment_select_car_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/activity_equipment_select_car1_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/shape_border_layout"
                    android:orientation="vertical"
                    android:layout_margin="5dp">

                    <LinearLayout
                        android:id="@+id/activity_equipment_select_car1_title_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_background_title_item_mission_layout"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/activity_equipment_car_1_name_textview"
                            android:layout_below="@+id/activity_equipment_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:textAlignment="center"
                            android:textStyle="normal"
                            android:textSize="17sp"
                            android:textColor="@color/MJA_Gray_48"
                            android:text="@string/activity_equipment_car_1_name_textview"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_car_1"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:tint="@color/MJA_White"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/activity_equipment_select_car2_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/shape_border_layout"
                    android:orientation="vertical"
                    android:layout_margin="5dp">

                    <LinearLayout
                        android:id="@+id/activity_equipment_select_car2_title_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_background_title_item_mission_layout"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/activity_equipment_car_2_name_textview"
                            android:layout_below="@+id/activity_equipment_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:textAlignment="center"
                            android:textStyle="normal"
                            android:textSize="17sp"
                            android:textColor="@color/MJA_Gray_48"
                            android:text="@string/activity_equipment_car_2_name_textview"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_car_2"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:tint="@color/MJA_White"/>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/activity_equipment_select_car3_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/shape_border_layout"
                    android:orientation="vertical"
                    android:layout_margin="5dp">

                    <LinearLayout
                        android:id="@+id/activity_equipment_select_car3_title_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_background_title_item_mission_layout"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/activity_equipment_car_3_name_textview"
                            android:layout_below="@+id/activity_equipment_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:textAlignment="center"
                            android:textStyle="normal"
                            android:textSize="18sp"
                            android:textColor="@color/MJA_Gray_48"
                            android:text="@string/activity_equipment_car_3_name_textview"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_car_3"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:tint="@color/MJA_White"/>

                </LinearLayout>


            </LinearLayout>

            <Button
                android:id="@+id/activity_equipment_start_mission_btn"
                android:layout_below="@+id/activity_equipment_select_car_container_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:background="@color/MJA_Green"
                android:padding="15dp"
                android:textColor="@color/MJA_White"
                android:textSize="18sp"
                android:text="@string/activity_equipment_start_mission_btn"/>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
