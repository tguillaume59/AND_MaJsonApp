<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ma_json_app.tguillaume.com.majsonapp.MainActivity"
    android:background="@color/MJA_Gray_48">

    <ImageView
        android:id="@+id/activity_main_logo_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:scaleX="0.8"
        android:scaleY="0.8"/>

    <TextView
        android:id="@+id/activity_main_title"
        android:layout_below="@+id/activity_main_logo_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:textColor="@color/MJA_Yellow_gold"
        android:textStyle="bold"
        android:textSize="25sp"
        android:text="@string/activity_main_title"/>

    <EditText
        android:id="@+id/activity_main_login_edittext"
        android:layout_below="@+id/activity_main_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="10dp"
        android:background="@color/MJA_White_transparent"
        android:textColorHint="@color/MJA_Gray_48"
        android:hint="@string/activity_main_login_hint"/>

    <EditText
        android:id="@+id/activity_main_mdp_edittext"
        android:layout_below="@+id/activity_main_login_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_margin="15dp"
        android:padding="10dp"
        android:background="@color/MJA_White_transparent"
        android:textColorHint="@color/MJA_Gray_48"
        android:hint="@string/activity_main_mdp_hint"/>

    <Button
        android:id="@+id/activity_main_login_btn"
        android:layout_below="@+id/activity_main_mdp_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="@color/MJA_Red"
        android:padding="15dp"
        android:textColor="@color/MJA_White_transparent"
        android:textSize="18sp"
        android:text="@string/activity_main_btn"/>




</RelativeLayout>
